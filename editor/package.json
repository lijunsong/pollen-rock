{
  "name": "editor-src",
  "version": "0.0.1",
  "description": "Pollen-rock in-browser editor",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "run-p server:** elm:**",
    "build": "npm run elm",
    "server:http": "http-server public -p 5000",
    "server:json": "json-server --watch api/db.json --middlewares api/singular.js --port 4000 --routes api/routes.json",
    "server:racket": "racket ../pollen-rock/main.rkt --start-dir ../pollen-rock/tests/project-root --log-level debug --port 8000",
    "elm": "elm-make src/Main.elm --output=public/main.js",
    "elm:dev": "elm-live src/Main.elm --output=public/main.js --open --port=7000 --dir=public --pushstate",
    "elm:reactor": "elm-reactor --port 9000"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lijunsong/pollen-rock.git"
  },
  "keywords": [
    "pollen",
    "editor"
  ],
  "author": "Junsong Li",
  "license": "LGPL",
  "bugs": {
    "url": "https://github.com/lijunsong/pollen-rock/issues"
  },
  "homepage": "https://github.com/lijunsong/pollen-rock#readme",
  "dependencies": {
    "font-awesome": "^4.7.0"
  },
  "devDependencies": {
    "elm": "^0.18.0",
    "elm-live": "^2.7.5",
    "http-server": "^0.10.0",
    "json-server": "^0.12.0",
    "npm-run-all": "^4.1.2"
  }
}
